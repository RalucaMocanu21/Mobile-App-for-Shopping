<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mocanu_Raluca_Lab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="img1.png"
                SemanticProperties.Description="Imagine cu carti"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Bun venit pe aplicatia mea!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Aici imi voi dezvolta apliactia"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Aici imi voi dezvolta aplicatia"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Apasa aici"
                SemanticProperties.Hint="Numarul de vizitari de pe aplicatie"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
